{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Next.js",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "http://localhost",
        "uriFormat": "http://localhost:3000",
        "action": "debugWithChrome"
      },
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
